{
  "name": "Bulk-sms-api",
  "version": "1.0.0",
  "description": "Bulk sms allocation backend using checker and maker Access layer Control System. Application is synonymous to ebulk sms but with the exception that checker and maker integration",
  "main": "build/index.js",
  "scripts": {
    "build": "yarn compile:tsc && yarn doc",
    "start:dev": "cross-env NODE_ENV=dev && nodemon build/src/server.js --env dev",
    "compile:tsc:watch": "yarn run tsc -w",
    "db:start:dev:win": "start mongod --port 27017 --dbpath C:/data/bulk-sms-api",
    "db:start:dev:linux": "mongod --port 27017 --dbpath /var/lib/mongodb/bulk-sms-api",
    "compile:tsc": "yarn run tsc ",
    "start:dev:linux": "yarn compile:tsc && yarn lint:fix &&  yarn start:dev &&  yarn run concurrently  \"yarn compile:tsc:watch\" \"yarn prettier-watch\" \"yarn doc:watch\" ",
    "start:dev:win": "yarn compile:tsc && yarn lint:fix && yarn db:start:dev:win && start yarn start:dev &&  yarn run concurrently  \"yarn compile:tsc:watch\" \"yarn prettier-watch\" \"yarn doc:watch\" ",
    "start": "node --max-old-space-size=4096  build/src/server.js",
    "doc": "apidoc -i src/doc/ -o api-doc/ --template ./doc-template",
    "doc:watch": "nodemon --watch build/doc --exec yarn doc",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint --fix src/**/*.ts",
    "test": "jest --watch --detectOpenHandles --rootDir=__tests__ ",
    "deploy": "git push heroku main ",
    "prettier-watch": "onchange **/*.ts -- prettier --write {{changed}}",
    "prettier-format": "prettier --config .prettierrc **/*.ts --write",
    "prepare": "husky install"
  },
  "keywords": [],
