{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "root":true,
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "no-console": "off",
        "prettier/prettier": 2,
        "@typescript-eslint/no-namespace": [2, {"allowDeclarations": true}],
        "import/extensions": [
            "error",
            "ignorePackages",
            {
              "js": "never",
              "jsx": "never",
              "ts": "never",
              "tsx": "never"
            }
         ]
    },
    "settings": {
        "import/resolver": {
          "node": {
            "extensions": [".js",  ".ts"]
          }
        }
      }
}
